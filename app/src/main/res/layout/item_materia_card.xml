<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FRANJA DE COLOR SUPERIOR (Decorativa) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#6200EE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TÍTULO MATERIA -->
            <TextView
                android:id="@+id/tvCardTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MATEMÁTICA I"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <!-- CÓDIGO DE MATERIA (Color Opaco) -->
            <TextView
                android:id="@+id/tvCardCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAT-101"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:layout_marginBottom="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="12dp"/>

            <!-- HORARIO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:tint="#6200EE"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvCardHorario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lun y Mie 10:00 AM"
                    android:textColor="#555555"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- UBICACIÓN / AULA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    app:tint="#E91E63"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvCardAula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edificio B, Aula 22"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- ALUMNO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="#03DAC5"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvCardAlumno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan Perez"
                    android:textColor="#777777"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- FOOTER DE ACCIONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F9F9F9"
            android:padding="10dp"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toca para opciones"
                android:textSize="12sp"
                android:textColor="#6200EE"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="#6200EE"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>